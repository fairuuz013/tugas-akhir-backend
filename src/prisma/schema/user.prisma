model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  username      String?  @unique
  password_hash String
  role          String? @default("MEMBER")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  profile       Profile?
  borrowRecords BorrowRecord[]
}
